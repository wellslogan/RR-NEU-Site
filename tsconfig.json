{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app": [
        "src"
      ],
      "@app/*": [
        "src/*"
      ],
      "@styles": [
        "src/styles"
      ],
      "@styles/*": [
        "src/styles/*"
      ]
    },
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "allowJs": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ]
}
